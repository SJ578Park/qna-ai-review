{
  "name": "qna-ai-review-functions",
  "version": "0.1.0",
  "description": "Cloud Functions for automated answering in the Q&A project",
  "main": "lib/index.js",
  "type": "module",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf lib",
    "deploy": "npm run build && firebase deploy --only functions",
    "dev": "npm run build -- --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "start": "npm run build && firebase emulators:start --only functions"
  },
  "dependencies": {
    "@genkit-ai/core": "^1.1.0",
    "@genkit-ai/firebase": "^1.22.0",
    "@genkit-ai/vertexai": "^1.22.0",
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^5.1.0",
    "genkit": "^1.22.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.4.5"
  }
}
